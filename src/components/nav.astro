---
import { Image } from 'astro:assets';
import flickerSkill from "../assets/flicker.png";

const page = Astro.url.pathname;
---
<div class="sticky top-0 start-0 z-20">
    <nav class="bg-gray-800 dark:bg-gray-850 sticky top-0 start-0 w-full border-b border-black-200 dark:border-gray-950">
        <div class="max-w-screen-xl flex flex-wrap items-center justify-between mx-20 p-1 gap-x-6">
            <a href="/home/" class="flex items-center space-x-1"> 
                <Image src={flickerSkill} alt="The Holy Grail" class="border-2 border-[#4275e7] rounded-md" />
                <span class="self-center pl-3 text-3xl dark:text-white font-semibold ">Flicker Strike Guides</span> 
            </a>
            <div class="navs items-center justify-start flex w-auto grow">
                <ul class="flex flex-row pl-6 pr-6">
                    <li class="text-lg">
                        <a class={`block p-2 pl-5 pr-5 text-stone-500 rounder hover:text-stone-100 active:text-[#4275e7] rounded-md ${page.length < 7 ? 'bg-sky-600/50' : ''}`} href="/home">Home</a>
                    </li>
                    <li class="text-lg">
                        <a class={`block p-2 pl-5 pr-5 text-stone-500 rounder hover:text-stone-100 active:text-[#4275e7] rounded-md ${page.includes('ascendancy') ? 'bg-sky-600/50' : ''}`} href="/home/ascendancy">Ascendancies</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</div>